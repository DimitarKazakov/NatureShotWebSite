@model IEnumerable<NatureShot.Web.ViewModels.SignalR.Chat.UserChats>


    <div class="input-group input-group-lg md-form form-sm form-1 pl-0 mb-5 border-primary ml-md-5">
        <div class="input-group-prepend">
            <span class="input-group-text bg-primary border-primary" id="basic-text1">
                <a href="javascript:void(0)" class="text-decoration-none">
                    <i class="fas fa-search text-white"
                       aria-hidden="true"></i>
                    <span class="text-white">Search By Username</span>
                </a>
            </span>
        </div>
        <form id="searchForm" class="col-md-8 ml-0 pl-0 pr-0 mr-0" method="get" asp-controller="PhotoPosts" asp-action="SearchByLeastLikes">
            <input id="searchByInputHidden" type="hidden" name="searchBy" value="Name" />
            <input class="form-control p-4 input-lg my-0 py-1 searchBorder rounded-0" name="searchInput" type="text" placeholder="Search . . ." aria-label="Search">
        </form>
    </div>

    @if (Model.Any())
    {
        @foreach (var userChat in Model)
        {
            <h1>@userChat.Username</h1>
        }
    }
    else
    {
        <h1>You dont have previous chats</h1>
    }