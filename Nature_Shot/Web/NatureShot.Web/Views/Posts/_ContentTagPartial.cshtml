@model NatureShot.Web.ViewModels.Images.ImagePostViewModel

<h4>@Model.Username</h4>
<p class="text-black-50 mb-0"><u>@Model.Tags</u></p>
<br>
<p class="text-black-50 mb-0">@Model.Caption</p>

<p class="text-black-50 mb-0 locationText" hidden>Location: <span class="text-dark"> @Model.Location</span></p>
<p class="text-black-50 mb-0 cameraText" hidden>Camera: <span class="text-dark"> @Model.Camera</span></p>

<p class="text-black-50 mb-0 likesText" hidden>Likes: <span class="text-dark">@Model.Likes</span></p>
<p class="text-black-50 mb-0 dislikesText" hidden>Dislikes: <span class="text-dark">@Model.Dislikes</span></p>
<br>
<br>
<br>
<br>
<div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Write a comment . . ." aria-label="comment" aria-describedby="basic-addon2">
    <div class="input-group-append">
        <span class="input-group-text bg-outline-dark" id="basic-addon2"><a href=""><i class="fa fa-share-square" aria-hidden="true"></i></a></span>
    </div>
</div>
<form method="post">
    <button class="btn btn-outline-dark mr-3">
        <i class="fas fa-thumbs-up"></i> Like
    </button>
    <button class="btn btn-outline-dark">
        <i class="fas fa-thumbs-down"></i> Dislike
    </button>
</form>